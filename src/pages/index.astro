---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog', ({ data }) => {
	// If the site is built for production, hide drafts.
	// Locally, you'll still see them so you can keep editing.
	return import.meta.env.PROD ? data.draft !== true : true;
})).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

const AVATAR_SRC = `${BASE}avatar.png`;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				display: flex;
				align-items: center;
				gap: 1rem;
				margin: 2rem 0;
			}
			.avatar {
				border-radius: 9999px;
			}
			.description {
				margin: 0.5rem 0 0;
				color: rgb(var(--gray-dark));
				font-size: 1rem;
				line-height: 1.4;
				/* Limits description to 2 lines so it doesn't get too long */
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;  
				overflow: hidden;
			}
			.tagline {
				font-style: italic;
				color: rgb(var(--gray));
			}

			/* Horizontal List Styles */
			ul {
				display: flex;
				flex-direction: column;
				gap: 1.5rem; /* Spacing between posts */
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li a {
				display: flex;
				align-items: center;
				gap: 1.5rem;
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				width: 240px; /* Controlled width */
				height: 140px; /* Slimmer height */
				object-fit: cover;
				border-radius: 8px;
			}
			.post-content {
				flex: 1; /* Takes up remaining space */
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				font-size: 1.4rem;
				font-weight: bold;
				line-height: 1.2;
			}
			.date {
				margin: 0.25rem 0 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}
			ul li a:hover .title {
				color: var(--accent);
			}
			ul li a:hover img {
				box-shadow: var(--box-shadow);
			}
			
			@media (max-width: 720px) {
				ul li a {
				flex-direction: column;
				align-items: flex-start;
				gap: 0.5rem;
				}
				ul li img {
				width: 100%;
				height: 180px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="hero">
				<img class="avatar" src={AVATAR_SRC} alt="" width="96" height="96" />
				<div>
					<h1>{SITE_TITLE}</h1>
					<p class="tagline">{SITE_DESCRIPTION}</p>
				</div>
			</div>

			<section>
				<ul>
					{
					posts.map((post) => (
						<li>
						<a href={`${BASE}${post.id}/`}>
							<img 
							src={typeof post.data.heroImage === 'string' ? post.data.heroImage : post.data.heroImage?.src || '/placeholder.jpg'} 
							alt="" 
							/>
							<div class="post-content">
							<h4 class="title">{post.data.title}</h4>
							{post.data.description && <p class="description">{post.data.description}</p>}
							<p class="date">
								<FormattedDate date={post.data.pubDate} />
							</p>
							</div>
						</a>
						</li>
					))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>