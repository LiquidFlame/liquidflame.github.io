---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

const AVATAR_SRC = `${BASE}avatar.png`;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <div class="hero">
        <img
          class="avatar"
          src={AVATAR_SRC}
          alt="LiquidFlame avatar"
          width="96"
          height="96"
          loading="lazy"
        />
        <div>
          <h1>LiquidFlameâ€™s Blog</h1>
          <p class="tagline">Hacking one Gibson at a time</p>
        </div>
      </div>
    </main>
    <Footer />
    <style>
      .hero {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin: 2rem 0;
      }
      .avatar {
        border-radius: 9999px;
        object-fit: cover;
      }
      .tagline {
        margin: 0.25rem 0 0;
        opacity: 0.8;
      }
      .hero h1 {
        margin: 0;
      }
    </style>
  </body>
</html>
